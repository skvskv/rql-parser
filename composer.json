{
  "name": "skvskv/xiag-rql-parser",
  "type": "library",
  "version": "0.1",
  "description": "PHP reflection-based dependency injection container with auto-wiring, auto-registration and interception support",
  "keywords": ["rest", "rql", "resource", "query", "language", "parser"],
  "license": "GPL-2.0",
  "autoload": {
    "psr-4": { "Xiag\\Rql\\Parser\\": "src/"}
  },
  "autoload-dev": {
    "psr-4": { "Xiag\\Rql\\ParserTests\\": "test/"}
  },
  "require": {
    "php": ">=5.5"
  },
  "require-dev": {
    "phpunit/phpunit": "~4.8 || ~5.7",
    "squizlabs/php_codesniffer": "~2.0"
  },
  "suggest": {
    "xiag/rql-command": "Console commands to visualize your RQL code"
  },
  "scripts": {
    "cs": [
      "vendor/bin/phpcs --standard=PSR1 src/ tests/",
      "vendor/bin/phpcs --standard=PSR2 src/ tests/"
    ]
  },
  "minimum-stability": "stable"
}
